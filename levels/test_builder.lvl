	SelectEntity 6 #builder
	UseInputControl 0 200 0
	AddEntity
	UseAbsolutePosition 0 0 1000 1000 #-50 -50 100 100
	UseBasicCollision 0 0
	UseTriggerInteraction 0 -1 2 -1
	UseTimedHealth 1 3

